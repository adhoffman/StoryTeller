<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="adhoffman.storyteller"
    android:versionCode="1"
    android:versionName="1.0" >
    
    <uses-feature android:name="android.hardware.camera"></uses-feature>
    

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19"  />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="adhoffman.storyteller.activities.MainActivity"
            android:label="@string/app_name" 
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="adhoffman.storyteller.activities.NewStoryCreateActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape">
        </activity>
        
        <activity
            android:name="adhoffman.storyteller.activities.StoryEditorActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape">
        </activity>
            
        <activity
            android:name="adhoffman.storyteller.activities.StoryPlayerActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape">
        </activity>
        
    </application>

</manifest>
